<script>
  const OWNER_CODE = 'MLM_1234pro'
  let role = null
  let contactEmail = 'maarcgaalleegoo@gmail.com'

  let products = [
    {name:'Soporte 3D Tech',price:25,img:'https://via.placeholder.com/400x300'}
  ]

  function showSection(id){
    document.querySelectorAll('section').forEach(s=>s.classList.add('hidden'))
    document.getElementById(id).classList.remove('hidden')
  }

  function login(){
    const code = adminCode.value
    if(code === OWNER_CODE) role='owner'
    else if(code) role='admin'
    else role='user'

    document.getElementById('role').innerText = 'Rol: '+role
    showSection('catalogo')
    if(role!=='user') document.getElementById('admin').classList.remove('hidden')
  }

  function logout(){location.reload()}

  function render(){
    const c = document.getElementById('products')
    c.innerHTML=''
    products.forEach(p=>{
      c.innerHTML += `<div class="card"><img src="${p.img}"><h3>${p.name}</h3><p>${p.price} €</p><button class="btn" onclick="order('${p.name}',${p.price})">Pedir</button></div>`
    })
  }

  function addProduct(){
    products.push({name:pname.value,price:pprice.value,img:pimg.value})
    render()
  }

  function saveContact(){
    contactEmail = contact.value
    document.getElementById('contactShow').innerText = 'Contacto: '+contactEmail
  }

  function order(name,price){
    const body = `Pedido Protobuild3D:%0AProducto: ${name}%0APrecio: ${price} €%0APago en persona.`
    window.location = `mailto:${contactEmail}?subject=Nuevo pedido Protobuild3D&body=${body}`
  }

  render()
</script>
</body>
