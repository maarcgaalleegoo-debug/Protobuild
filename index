  </section>

  <!-- PERFIL -->
  <section id="perfil" class="hidden card">
    <h2>Perfil</h2>
    <p id="role"></p>
    <button class="btn alt" onclick="logout()">Cerrar sesión</button>
  </section>

  <!-- ADMIN -->
  <section id="admin" class="hidden card">
    <h2>Panel Admin / Owner</h2>
    <p>Editar productos y contacto</p>
    <input id="pname" placeholder="Nombre producto" />
    <input id="pprice" placeholder="Precio" />
    <input id="pimg" placeholder="URL imagen" />
    <button class="btn" onclick="addProduct()">Añadir producto</button>
    <hr />
    <input id="contact" placeholder="Correo de contacto" />
    <button class="btn" onclick="saveContact()">Guardar contacto</button>
  </section>

